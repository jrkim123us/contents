<div class="container">
	<div class="row">
		<div class="col-md-offset-1 col-md-10 col-lg-offset-1 col-lg-10">
			<div class="well">
				<form action="" class="form-horizontal" role="form" method="PUT">
					<fieldset>
						<legend>{{name}}</legend>
						<div class="form-group">
							<label for="wbs" class="col-md-2 col-lg-2 control-label">WBS</label>
							<div class="col-md-10 col-lg-10">
								<p class="form-control-static">{{wbs}}</p>
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 col-lg-2 control-label">작업 이름</label>
							<div class="col-md-10 col-lg-10">
								<input class="form-control" name="name" type="text" placeholder="Enter name" value="{{name}}">
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 col-lg-2 control-label">승인자</label>
							<div class="col-md-10 col-lg-10">
								<select data-placeholder="Enter name" name="approver" multiple class="form-control chosen-select"></select>
								{{!select option 추가하는 부분}}
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 col-lg-2 control-label">담당자</label>
							<div class="col-md-10 col-lg-10">
								<select data-placeholder="Enter name" name="worker" multiple class="form-control chosen-select"></select>
								{{!select option 추가하는 부분}}
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 col-lg-2 control-label">가중치</label>
							<div class="col-md-10 col-lg-10">
								<input class="form-control" name="weight" type="number" placeholder="Enter weight point" value="{{weight}}">
							</div>
						</div>
						<div class="form-group">
							<label for="name" class="col-md-2 col-lg-2 control-label">작업 설명</label>
							<div class="col-md-10 col-lg-10">
								<textarea class="form-control" name="desc" rows="5" placeholder="Enter description" value=""></textarea>
							</div>
						</div>
						<!--
						<div class="form-group">
							<div class="col-offset-2 col-md-10 col-lg-10">
								<div class="checkbox">
									<label for="remember">
										<input id="remember" type="checkbox" value="remember-me">Remember me
										<a href="session/forget_password"> (forget password)</a>
									</label>
								</div>
							</div>
						</div>
						-->
						<div class="form-group">
							<div class="col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10">
								<button class="btn btn-primary btn-save" data-loading-text="Saving...">Save</button>
								<button class="btn btn-default btn-cancel">Cancel</button>
							</div>
						</div>
						<div class="form-group taskForm-group">
							<div class="taskForm-alert col-md-offset-2 col-md-10 col-lg-offset-2 col-lg-10">
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>