div.container(ng-controller="loginController")
	div.row
		div.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
			div.well
				form.form-signin(name="loginForm", role="form", method="post", novalidate)
					fieldset
						legend="Please sign in"
						div.form-group(ng-class="{'has-error' : loginForm.email.$dirty && loginForm.email.$invalid, 'has-success' : loginForm.email.$valid}")
							input.form-control(ng-model="user.email", name="email", type="email", placeholder="example@lgcns.com", required)
							div(ng-show="loginForm.email.$dirty && loginForm.email.$invalid")
								p.help-block(ng-show="loginForm.email.$error.required")="Email is required."
								p.help-block(ng-show="loginForm.email.$error.email")="This is not a valid email."
						div.form-group(ng-class="{'has-error' : loginForm.password.$dirty && loginForm.password.$invalid, 'has-success' : loginForm.password.$valid}")
							input.form-control(ng-model="user.password", name="password", type="password", placeholder="Password", required, ng-minlength=8, ng-maxlength=15)
							div(ng-show="loginForm.password.$dirty && loginForm.password.$invalid")
								p.help-block(ng-show="loginForm.password.$error.required")="Password is required."
								p.help-block(ng-show="loginForm.password.$error.minlength")="Password is more than 8 characters."
								p.help-block(ng-show="loginForm.password.$error.maxlength")="Password is less than 15 characters."
						div.checkbox
							label(for="remember")="Remember me"
								a(href="session/forget_password")=" (forget password)"
								input#remember(type="checkbox", value="remember-me")
						button.btn.btn-large.btn-primary(ng-click="update(user)")="Sign in"
			div.well
				pre="form = {{user | json}}"
				pre="master = {{master | json}}"
