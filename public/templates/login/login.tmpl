<div class="container">
	<div class="row">
		<div class="col-lg-4 col-offset-4">
			<div class="well">
				<form action=""  class="form-signin" role="form" method="post">
					<fieldset>
						<legend>Please sign in</legend>
						<div class="form-group">
							<input class="form-control" name="email" type="text" placeholder="example@lgcns.com">
						</div>
						<div class="form-group">
							<input class="form-control" name="password" type="password" placeholder="Password">
						</div>
						<div class="checkbox">
							<label for="remember">Remember me
								<a href="session/forget_password"> (forget password)</a>
								<input id="remember" type="checkbox" value="remember-me">
							</label>
						</div>
						<button type="submit" class="btn btn-large btn-primary">Sign in</button>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>
